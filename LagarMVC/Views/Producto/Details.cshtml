@model CapaDatos.Entidades.Producto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3 class="h3 text-center">Detalles del producto: @Model.NomProducto.ToUpper()</h3>
<br />

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IdProducto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdProducto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomProducto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomProducto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MarcaProducto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MarcaProducto)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CostoProducto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CostoProducto)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center">
            @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-secondary btn-sm"})
        </div>
    }
</div>
